<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhuangli.faceverifycationdemo.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取原始人脸"
        android:id="@+id/id_choose1"
        android:layout_alignParent="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/id_choose2"
        android:text="打开"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/id_choose1"
        android:layout_marginLeft="50dp"/>
    <Button
        android:id="@+id/id_compare"
        android:text="比较"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/id_choose2"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:id="@+id/id_photo"
        android:src="@drawable/t3"
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/id_photo2"
        android:src="@drawable/t2"
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/id_choose1"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/id_simil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="相似度"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="50dp"
        android:textSize="20dp"/>

</RelativeLayout>
